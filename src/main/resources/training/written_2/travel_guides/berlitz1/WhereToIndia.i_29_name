        <ENAMEX TYPE="FAC">Lake Pichola</ENAMEX>, <NUMEX TYPE="QUANTITY">4 km</NUMEX> (<NUMEX TYPE="QUANTITY">2 miles</NUMEX>) long and <NUMEX TYPE="QUANTITY">3 km</NUMEX> (<NUMEX TYPE="QUANTITY">2 miles</NUMEX>) wide
