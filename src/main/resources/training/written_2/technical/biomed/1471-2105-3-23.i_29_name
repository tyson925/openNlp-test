          <TIMEX TYPE="DATE">2</TIMEX> = <NUMEX TYPE="CARDINAL">12/</NUMEX>( 
          r 
          <NUMEX TYPE="CARDINAL">1</NUMEX> vs. <NUMEX TYPE="CARDINAL">2</NUMEX> + <NUMEX TYPE="CARDINAL">1</NUMEX> + 
