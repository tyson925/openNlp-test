          <TIMEX TYPE="DATE">1</TIMEX> = <NUMEX TYPE="CARDINAL">12/</NUMEX>(<NUMEX TYPE="CARDINAL">1</NUMEX> + 
          r 
          <NUMEX TYPE="CARDINAL">2</NUMEX> vs. <NUMEX TYPE="CARDINAL">1</NUMEX> + 
          r 
          <NUMEX TYPE="CARDINAL">3</NUMEX> vs. <NUMEX TYPE="CARDINAL">1</NUMEX> + ... + 
          r 
          <TIMEX TYPE="DATE">12</TIMEX> vs. <NUMEX TYPE="CARDINAL">1</NUMEX> )
