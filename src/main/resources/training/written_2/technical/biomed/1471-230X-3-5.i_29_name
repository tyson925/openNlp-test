            <ENAMEX TYPE="PER_DESC">patients</ENAMEX> (<NUMEX TYPE="CARDINAL">14</NUMEX> <ENAMEX TYPE="PER_DESC">males</ENAMEX> and <NUMEX TYPE="CARDINAL">7</NUMEX> <ENAMEX TYPE="PER_DESC">females</ENAMEX>, <TIMEX TYPE="DATE">46 to 75 years</TIMEX> of
