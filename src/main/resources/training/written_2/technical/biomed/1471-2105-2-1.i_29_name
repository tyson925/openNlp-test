          all terms 
          b ( 
          kn ,<ENAMEX TYPE="CONTACT_INFO">,</ENAMEX> 
          <ENAMEX TYPE="ORGANIZATION">p</ENAMEX> ) such that 
          b ( 
          kn ,<ENAMEX TYPE="CONTACT_INFO">,</ENAMEX> 
