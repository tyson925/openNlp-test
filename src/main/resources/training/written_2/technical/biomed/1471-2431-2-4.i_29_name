        complicated by severe <ENAMEX TYPE="DISEASE">malnutrition</ENAMEX> [ <ENAMEX TYPE="LAW">2</ENAMEX> ] . <ENAMEX TYPE="ORGANIZATION">Starnes</ENAMEX> and
        <ENAMEX TYPE="PERSON">Walsh</ENAMEX> [ <ENAMEX TYPE="LAW">3</ENAMEX> ] observed <ENAMEX TYPE="DISEASE">renal calculi</ENAMEX> in <NUMEX TYPE="CARDINAL">two</NUMEX> <ENAMEX TYPE="PER_DESC">adults</ENAMEX> with
