          cohort, <ENAMEX TYPE="PER_DESC">n</ENAMEX> = <NUMEX TYPE="CARDINAL">1863</NUMEX> <ENAMEX TYPE="PER_DESC">households</ENAMEX>; <NUMEX TYPE="PERCENT">approximately 83%</NUMEX> response
