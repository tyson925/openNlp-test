          searching several extensive homeopathic and complementary
          medicine registries including those of the <ENAMEX TYPE="PERSON">Woodward</ENAMEX>
          <ENAMEX TYPE="ORGANIZATION">Foundation</ENAMEX> (<ENAMEX TYPE="ORGANIZATION">USA</ENAMEX>); <ENAMEX TYPE="ORGANIZATION">CISCOM</ENAMEX> (<ENAMEX TYPE="ORGANIZATION">RCCM</ENAMEX>, <ENAMEX TYPE="GPE">London</ENAMEX>); <ENAMEX TYPE="ORGANIZATION">AMED</ENAMEX> (<ENAMEX TYPE="ORGANIZATION">British</ENAMEX>
          <ENAMEX TYPE="ORGANIZATION">Library</ENAMEX>); <ENAMEX TYPE="PERSON">HomInform</ENAMEX> (<ENAMEX TYPE="GPE">Glasgow</ENAMEX>, <ENAMEX TYPE="GPE">Scotland</ENAMEX>); IDAG
          (<ENAMEX TYPE="ORGANIZATION">Amersfoort</ENAMEX>, <ENAMEX TYPE="GPE">Netherlands</ENAMEX>); and <ENAMEX TYPE="ORGANIZATION">CCRH</ENAMEX> (<ENAMEX TYPE="GPE">India</ENAMEX>) as well as
